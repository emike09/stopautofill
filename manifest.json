{
  "manifest_version": 3,
  "name": "Stop Autofill",
  "version": "1.0.0",
  "description": "Opt-in autofill suppression per site/page, with element picker.",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_title": "Stop Autofill",
    "default_popup": "ui/panel.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "permissions": ["storage", "contextMenus", "tabs", "scripting"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "sw.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content/apply.js", "content/picker.js"],
      "css": ["content/picker.css"],
      "run_at": "document_start"
    }
  ]
}
